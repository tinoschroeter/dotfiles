set autoindent
set bg=dark
set paste
set backspace=2
set encoding=utf-8
set expandtab
set hlsearch
set incsearch
set nocp
set number
set ruler
set shiftwidth=4
set smartindent
set softtabstop=4
set tabstop=4
syntax on
set cul
nmap <C-h> :%!perltidy -l=140<CR>
set foldenable          " Enable folders
set foldmethod=marker   " Do the marker folding thing
